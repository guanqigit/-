<view class='flex flex-column'>
  <view class='flex flex-center' style='padding:15rpx 0;border-bottom:1px solid #f0f0f0'>
    <text style='font-size:30rpx; color:#222'>{{projuctname}}</text>
  </view>
  <view class='flex flex-column' style='border-bottom:1px solid #f0f0f0;position:absolute;bottom:120rpx;left:0;width:100%;'>
    <view class='flex flex-space flex-box'>
      <view class='flex flex-column flex-center flex-box' style='padding:40rpx 0;border-top:1px solid #f0f0f0' bindtap='nav7'>
        <image src='../../image/QQ.png' class='icon'></image>
        <text style='font-size:28rpx;color:#444'>人员</text>
      </view>
      <view class='flex flex-column flex-center flex-box' style='padding:40rpx 0;border-left:1px solid #f0f0f0;border-right:1px solid #f0f0f0;border-top:1px solid #f0f0f0' bindtap='nav3'>
        <image src='../../image/QQ.png' class='icon'></image>
        <text style='font-size:28rpx;color:#444'>材料</text>
      </view>
      <view class='flex flex-column flex-center flex-box' style='padding:40rpx 0;border-top:1px solid #f0f0f0' bindtap='nav1'>
        <image src='../../image/QQ.png' class='icon'></image>
        <text style='font-size:28rpx;color:#444'>机械</text>
      </view>
    </view>
    <view class='flex flex-space flex-box' style='border-top:1px solid #f0f0f0'>
      <view class='flex flex-column flex-center flex-box' style='padding:40rpx 0' bindtap='nav4'>
        <image src='../../image/QQ.png' class='icon'></image>
        <text style='font-size:28rpx;color:#444'>照片</text>
      </view>
      <view class='flex flex-column flex-center flex-box' style='padding:40rpx 0;border-left:1px solid #f0f0f0;border-right:1px solid #f0f0f0;' bindtap='nav5'>
        <image src='../../image/QQ.png' class='icon'></image>
        <text style='font-size:28rpx;color:#444'>完成工程量</text>
      </view>
      <view class='flex flex-column flex-center flex-box' style='padding:40rpx 0' bindtap='nav6'>
        <image src='../../image/QQ.png' class='icon'></image>
        <text style='font-size:28rpx;color:#444'>安全文明</text>
      </view>
    </view>
  </view>
</view>
<view class='flex flex-space' style='position:absolute;bottom:0;left:0;width:100%;border-top:1px solid #f5f5f5;height:120rpx;'>
  <view class='flex flex-box flex-center' style='border-right:1px solid #f5f5f5;'>
    <text style="font-size:28rpx;color:#444;height:100%;border-right:1px solid #f0f0f0" class='flex flex-box flex-center' bindtap='nav9'>工程信息</text>
    <text style="font-size:28rpx;color:#444;height:100%" class='flex flex-box flex-center' bindtap='goback' wx:if="{{!btncode}}">退出项目</text>
    <button open-type="share" class='flex flex-box flex-center sharebtn' wx:if="{{btncode}}">邀请好友</button>
  </view>
</view>